# FlowerPower Configuration
FP_JOB_QUEUE_TYPE=rq

# Redis Configuration (for RQ job queue)
FP_RQ_BACKEND_HOST=localhost
FP_RQ_BACKEND_PORT=6379
FP_RQ_BACKEND_USERNAME=
FP_RQ_BACKEND_PASSWORD=

# Logging
FP_LOG_LEVEL=INFO

# Web Scraping specific settings
SCRAPER_USER_AGENT=FlowerPower News Scraper 1.0
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY=1.0
SCRAPER_TIMEOUT=30
MAX_RETRIES=3

# Content processing
MIN_CONTENT_LENGTH=50
MAX_CONTENT_LENGTH=10000
EXTRACT_KEYWORDS=true
SENTIMENT_ANALYSIS=true
LANGUAGE_DETECTION=true

# Data storage
OUTPUT_FORMAT=json
INCLUDE_METADATA=true
DEDUPLICATION=true

# Scraping environment
ENVIRONMENT=development